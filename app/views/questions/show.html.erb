<h1><%= @question.title %></h1>
<p><%= @question.description %></p>
<span id="question-vote"><%= @question.sum_votes %></span>
<span class="question-button-up"><%= button_to "Upvote", question_upvote_path(@question) %> </span>
<span class="question-button-down"><%= button_to "Downvote", question_downvote_path(@question) %> </span>
<p><%= render '/answers/answer_form', :answer => @answer, :answerable => @question, :question => @question %></p>
<% @answers.each do |answer| %>
<div class="answer">
  <span><%= answer.description %></span>
<span class="answer-vote"><%= answer.sum_votes %></span>
  <span><%= button_to "Upvote", answer_upvote_path(answer) %> 
  </span>
  <span><%= button_to "Downvote", answer_downvote_path(answer) %> </span>
  <span>upvote</span>
  <%= render '/answers/answer_form', :answer => answer, :answerable => answer, :question => @question %>
  </div>
<% end %>
